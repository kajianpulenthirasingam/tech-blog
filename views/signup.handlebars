<div class="col-12 col-md-8 m-auto align-center mt-5">
  <h2 class="text-center border border-black bg-info m-0 p-2">Sign up</h2>
  <div>
    <form class="d-flex flex-column border border-black p-3">
      <label class="m-2">
        Username:
      </label>
      <input class="m-2" type="text" name="username" id="username" />
      <label class="m-2">
        Password:
      </label>
      <input class="m-2" type="password" name="password" id="password" />
      <button
        type="submit"
        id="signup-btn"
        class="btn btn-success m-2 align-self-center"
      >Sign up</button>
      <a href="/login" class="btn-primary m-2 align-self-center">Login instead</a>
    </form>
  </div>
</div>
<script src="/js/signup.js"></script>